# ============================================
# CONFIGURAÇÃO DA API DE ALIMENTOS E NUTRIÇÃO
# ============================================

# Banco de Dados MySQL
DATABASE_URL="mysql://usuario:senha@localhost:3306/food_nutrition_db"

# Porta da aplicação
PORT=3000

# API Key OBRIGATÓRIA para acessar a API
# Gere com: openssl rand -hex 32
# Todas as rotas exigem header: x-api-key: SUA_CHAVE
API_KEY="gere-uma-chave-forte-aqui"

# API Key para endpoints admin (importação de dados)
ADMIN_API_KEY="outra-chave-para-admin"

# Ambiente (development | production)
NODE_ENV="development"

# Origens permitidas para CORS (separadas por vírgula)
ALLOWED_ORIGINS=""

# Habilitar Swagger (true | false)
ENABLE_SWAGGER="true"
